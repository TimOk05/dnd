# Защита файлов пользователей
<Files "users.json">
    Order allow,deny
    Deny from all
</Files>

# Защита конфигурационных файлов
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Защита файлов безопасности
<Files "login_attempts.json">
    Order allow,deny
    Deny from all
</Files>

<Files "security.log">
    Order allow,deny
    Deny from all
</Files>

# Временно разрешаем доступ ко всем JSON файлам для тестирования
# <Files "*.json">
#     Order allow,deny
#     Deny from all
# </Files>

# Разрешаем доступ к manifest.json
<Files "manifest.json">
    Order allow,deny
    Allow from all
    Require all granted
</Files>

# Разрешаем доступ к dnd_mechanics.json
<Files "dnd_mechanics.json">
    Order allow,deny
    Allow from all
    Require all granted
</Files>

# Разрешаем доступ к JSON файлам в папке pdf
<Files "pdf/*.json">
    Order allow,deny
    Allow from all
</Files>

# Настройки безопасности
ServerSignature Off
Options -Indexes

# Перенаправление ошибок
ErrorDocument 403 /login.php
ErrorDocument 404 /login.php
